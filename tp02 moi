const CoursAnglaisEcts = 15;
const CoursProgrammationEcts = 25;
const CoursInitPcEcts = 20;

let matriculeEtudiant;
let aReussi; // boolean
let aRate;
let grade;
let coteAnglais;
let coteProgrammation;
let coteInitPcEcts;
let messageRate;//
let messageReussi;//

grade = 'satisfaction';
grade2 = 'distinction';
grade3 = 'grande distinction';

matriculeEtudiant =prompt("veuillez introduire votre matricule étudiant");

coteAnglais = Number(prompt("veuillez introduire votre cote d'anglais sur 20"));
coteProgrammation = Number(prompt("veuillez introduire votre cote de programmation sur 20"));
coteInitPcEcts = Number(prompt("veuillez introduire votre cote d'inititation Pc sur 20"));

let coteTotal = (coteProgrammation/20*CoursProgrammationEcts) + (coteAnglais/20*CoursAnglaisEcts) + (coteInitPcEcts/20*CoursInitPcEcts);
let moyenne = coteTotal /60*20;

if((moyenne.toFixed(2) >= 10 && coteAnglais>=10 && coteProgrammation>=10 && coteInitPcEcts>=10)) {
	Boolean(aReussi = true);
	messageReussi = "vous avez réussi";
}
else {
	Boolean (aReussi = false);
	messageRate = "vous avez raté";
}
if((moyenne >=12) && (moyenne <14)) {
	grade= "satisfaction";
}	
else if ((moyenne >=14) && (moyenne <16)){
	grade= "distinction";
}
else if (moyenne >=16) {
	grade= "grande distinction"
}
if (aReussi == true) {
	console.log(matriculeEtudiant + " " + "votre moyenne est de" + " " + moyenne.toFixed(2) + " " + messageReussi+ " " + grade)
}
else if(aReussi == false) {
console.log(matriculeEtudiant + " " + "votre moyenne est de" + " " + moyenne.toFixed(2) + " " + messageRate)
}

